<h1>New Link</h1>

<form action="/links" method="post">
  <input type="hidden" name="authenticity_token" value="<%=form_authenticity_token%>">

  <label>Title
    <input type="text" name="link[title]" id="title" value="<%= @link.title %>">
</label>
  <label>URL
    <input type="password" name="link[url]" id="url" value="<%= @link.url %>">
</label>

  <input type="submit" value="Create New Link">
</form>
